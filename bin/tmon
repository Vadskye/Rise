#!/usr/bin/env fish

# Generate the Typescript version of the monster chapter while it's under active
# development.
g rts
tsc --incremental; or exit 1
npm run script -- src/scripts/generate_latex.js -t monster_descriptions -o ../core_book/generated/monster_descriptions.tex; or exit 1
g rise
cd core_book
set lint_output (chktex AutoGenerated.tex 2> /dev/null)
if test -n "$lint_output"
    echo "$lint_output"
    exit 1
end
tgcompile; or exit 1
